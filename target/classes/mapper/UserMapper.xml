<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qtt.ssm.user.dao.IUserDao">
    <resultMap id="userMap" type="com.qtt.ssm.user.pojo.User">
        <id column="id" property="id"/>
        <result column="tel" property="tel"/>
        <result column="password" property="password"/>
        <result column="email" property="email"/>
        <result column="invitation" property="invitation"/>
    </resultMap>

    <sql id="userColumn">
        ${alias}.id, ${alias}.tel, ${alias}.password, ${alias}.email, ${alias}.invitation
    </sql>

    <select id="findByTel" resultMap="userMap">
        select
        <include refid="userColumn">
            <property name="alias" value="u"/>
        </include>
        from rentcar.sys_user u
        where u.tel = #{tel}
    </select>

    <insert id="insertSelective">
        insert into rentcar.sys_user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="tel != null">
                tel,
            </if>
            <if test="password != null">
                password,
            </if>
            <if test="email != null">
                email,
            </if>
            <if test="invitation != null">
                invitation,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id, jdbcType = INTEGER},
            </if>
            <if test="tel != null">
                #{tel, jdbc = VARCHAR},
            </if>
            <if test="password != null">
                #{password, jdbc = VARCHAR},
            </if>
            <if test="email != null">
                #{email, jdbc = VARCHAR},
            </if>
            <if test="invitation != null">
                #{invitation, jdbc = VARCHAR},
            </if>
        </trim>
    </insert>

</mapper>